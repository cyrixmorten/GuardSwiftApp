    card_view:cardElevation="@dimen/micro_padding"
    card_view:cardBackgroundColor="@color/bootstrap_gray_lightest"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="@dimen/mini_padding">

    <RelativeLayout
